---
layout: base
---

<article class="post">
  <h2 class="post-title font-sans text-5xl text-center text-accent my-4">
    {{ title }}
  </h2>
  <div class="font-sans text-center text-soft mb-4">
    <div>Written by {{ author }}</div>
    <div>{{ date | prettyDate('MMMM dd, yyyy') }}</div>
    {% if tags %}
    <div class="text-default pt-3">
      {% for tag in tags %}
      <span class="border rounded py-1 px-2">{{ tag }}</span>
      {% endfor %}
    </div>
    {% endif %}
  </div>
  <section class="markdown font-serif">
    {{ content | safe }}
  </section>
</article>
